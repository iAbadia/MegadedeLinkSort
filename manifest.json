{
    "manifest_version": 2,
    "name": "Plusdede Link Sort",
    "short_name": "PLS",
    "description": "Plusdede Link Sorter",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "PLS",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "css": [
                "plusdedeLinkSort.css"
            ],
            "js": [
                "linkSort.js"
            ],
            "matches": [
                "https://www.plusdede.com/*"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": ["plusdedeLinkSort.css"]
}